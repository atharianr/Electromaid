<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/electromaid_type_logo"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        />

    <TextView
        android:id="@+id/settings_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="75dp"
        android:layout_marginLeft="45dp"
        android:text="Settings"
        android:fontFamily="@font/medium"
        android:textSize="22dp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/settings_title"
        >
        <TextView
            android:id="@+id/setting_notification"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Notification"
            android:textSize="15dp"
            android:layout_marginLeft="55dp"
            android:layout_marginBottom="20dp"
            android:layout_marginTop="20dp"/>
        <TextView
            android:id="@+id/setting_powersaving"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Automatic Power Saving"
            android:layout_below="@+id/setting_notification"
            android:textSize="15dp"
            android:layout_marginLeft="55dp"
            android:layout_marginBottom="20dp"/>
        <ToggleButton
            android:layout_width="36dp"
            android:layout_height="20dp"
            android:text=""
            android:textOn=""
            android:textOff=""
            android:background="@drawable/settings_selector"
            android:layout_alignParentRight="true"
            android:layout_marginRight="55dp"
            android:layout_marginBottom="20dp"
            android:layout_marginTop="20dp"
            />
        <ToggleButton
            android:layout_width="36dp"
            android:layout_height="20dp"
            android:text=""
            android:textOn=""
            android:textOff=""
            android:background="@drawable/settings_selector"
            android:layout_alignParentRight="true"
            android:layout_marginRight="55dp"
            android:layout_below="@id/setting_notification"
            android:layout_marginBottom="20dp"
            />
    </RelativeLayout>

</RelativeLayout>