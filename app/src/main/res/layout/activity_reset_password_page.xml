<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@android:color/white"
    tools:context=".ResetPasswordPage">

    <RelativeLayout
        android:layout_width="200dp"
        android:layout_height="125dp"
        android:layout_marginTop="50dp"
        >
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/asset_login_darkgreen"
            android:elevation="10dp"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_centerVertical="true"
            android:paddingLeft="30dp"
            android:elevation="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Reset Password"
                android:textColor="@android:color/white"
                android:textSize="25dp"
                android:fontFamily="@font/medium"
                />
        </LinearLayout>
    </RelativeLayout>

    <TextView
        android:layout_width="262dp"
        android:layout_height="wrap_content"
        android:text="Reset Token"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="5dp"
        android:layout_gravity="center"
        />

    <EditText
        android:id="@+id/reset_token"
        android:layout_width="262dp"
        android:layout_height="46dp"
        android:background="@drawable/custom_edittext"
        android:drawableStart="@drawable/ic_mail_outline"
        android:drawablePadding="10dp"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:hint="enter reset token"
        android:inputType="textEmailAddress"
        android:textColor="#253629"
        android:textSize="15dp"
        android:layout_gravity="center"
        android:layout_marginBottom="10dp"
        />

    <TextView
        android:layout_width="262dp"
        android:layout_height="wrap_content"
        android:text="New Password"
        android:layout_marginTop="25dp"
        android:layout_marginLeft="5dp"
        android:layout_gravity="center"
        />

    <EditText
        android:id="@+id/new_password"
        android:layout_width="262dp"
        android:layout_height="46dp"
        android:background="@drawable/custom_edittext"
        android:drawableStart="@drawable/ic_mail_outline"
        android:drawablePadding="10dp"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:hint="enter new password"
        android:inputType="textPassword"
        android:textColor="#253629"
        android:textSize="15dp"
        android:layout_gravity="center"
        android:layout_marginBottom="10dp"
        />

    <Button
        android:id="@+id/btn_resetpassword"
        android:layout_width="262dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="50dp"
        android:background="@drawable/roundedbox_darkgreen"
        android:elevation="5dp"
        android:text="Reset Password"
        android:textAllCaps="false"
        android:textColor="#ffffff">
    </Button>

</LinearLayout>